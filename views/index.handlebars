<div id='top-container' class='container-fluid'>
  <h1 id='main-title'>Encontre o emprego dos seus sonhos</h1>
  <p id='main-subtitle' class='text-center'>Somos o site com mais vagas de
    tecnologia do mercado, direcionadas a home office</p>
  <form action='/' method="GET" id='search-form' class='form-inline'>
    <div class='form-group col-md-10'>
      <input
        type='text'
        class='form-control'
        id='job'
        name='job'
        placeholder='Digite a vaga que está buscando'
      />
    </div>
    <div class='col-md-2'>
      <button type='submit' class='btn btn-primary'>Procurar</button>
    </div>
  </form>
</div>
<main>
  <div id='jobs-container' class='container'>
    <div class='row'>
      <div class='cold-md-12'>
          <h2 id='job-list-title'>Buscando vagas que contém: {{search}}</h2>
          <ul id='job-list' class='list-group'>
            {{#each jobs}}
              <li class="list-group-item {{#if dataValues.new_job }}new-job{{/if}}">
                <img src='/img/company.svg' alt='empresa1' />
                <p>{{dataValues.company}}</p>
                <h2>{{dataValues.title}}</h2>
                <p> R$ {{dataValues.salary}}</p>
                <span class='new-job-label'>Nova</span>
                <a class='btn btn-primary'>Ver vaga</a>
              </li>
            {{/each}}
          </ul>
        </h2>
      </div>
    </div>
  </div>
</main>